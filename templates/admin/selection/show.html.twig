{% extends 'faadmin.html.twig' %}

{% block body %}
<div class="card-body">
    <h1>Supprimer la sélection</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Photo</th>
                <td>{{ produit.photo }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ produit.marque }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ produit.couleur }}</td>
            </tr>
            <tr>
                <th>Forme</th>
                <td>{{ produit.type }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ produit.ref }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Magasin</th>
                <td>
                    {% for magasin in produit.magasins %}
                        {{ magasin.nom }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_selection_index') }}" class="btn btn-primary m-1 col-2">Retour à la liste</a>

    <a href="{{ path('app_selection_edit', {'id': produit.id}) }}" class="btn btn-primary m-1 col-2">Modifier la sélection</a>

    {{ include('admin/selection/_delete_form.html.twig') }}
</div>
{% endblock %}
