{% extends 'faadmin.html.twig' %}

{% block body %}
<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Bilan des devis</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active"></li>
        </ol>
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">Devis reçus</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-warning text-white mb-4">
                    <div class="card-body">Devis répondus</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-success text-white mb-4">
                    <div class="card-body">Travaux réalisés</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-danger text-white mb-4">
                    <div class="card-body">Relances devis</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-3">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-area me-1"></i>
                        Area Chart Example
                    </div>
                    <div class="card-body"><canvas width="100" height="40"></canvas></div>
                </div>
            </div>
            <div class="col-xl-3">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-bar me-1"></i>
                        Bar Chart Example
                    </div>
                    <div class="card-body"><canvas width="100" height="40"></canvas></div>
                </div>
            </div>
            <div class="col-xl-3">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-area me-1"></i>
                        Area Chart Example
                    </div>
                    <div class="card-body"><canvas width="100" height="40"></canvas></div>
                </div>
            </div>
            <div class="col-xl-3">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-bar me-1"></i>
                        Bar Chart Example
                    </div>
                    <div class="card-body"><canvas width="100" height="40"></canvas></div>
                </div>
            </div>
        </div>

        {# {{ dump(deviss) }} #}

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Bilan Devis
            </div>
            <div class="card-body">
                <table id="datatablesSimple">

                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Coordonnées</th>
                            <th>Message reçu</th>
                            <th>Réponse faite par</th>
                            <th>Réponse</th>
                            <th>Date réponse</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for devis in deviss %}
                            <tr>
                                <td>{{ devis.date | date}}</td>
                                <td>{{ devis.user.nom }}</td>
                                <td>{{ devis.user.prenom }}</td>
                                <td>
                                    <a class="btn btn-primary" href="{{ path('app_repondre', {id:devis.id}) }}">Accéder</a>
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="{{ path('app_repondre', {id:devis.id}) }}">Accéder</a>
                                </td>
                                <td>{{ devis.userrepondre}}</td>
                                <td>
                                    {# {{ dump(devis.reponse) }} #}
                                    {% if devis.reponse != null %}
                                        <a class="btn btn-primary" href="{{ path('app_repondre', {id:devis.id}) }}">Accéder</a> 
                                    {% else %}
                                        <a class="btn btn-danger" href="{{ path('app_repondre', {id:devis.id}) }}">A faire !!</a> 
                                    {% endif %}
                                </td>
                                <td>
                                    {# <td>{{ dump(devis.datereponse) }}</td> #}
                                    {{ (devis.datereponse != null)? devis.datereponse | date:"" }}
                                </td>
                            </tr> 
                        {% endfor %}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</main>
{% endblock %}
