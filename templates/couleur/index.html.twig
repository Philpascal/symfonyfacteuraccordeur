{% extends 'faadmin.html.twig' %}

{% block body %}
    <div class="card-body">
        <h1>Liste des couleurs</h1>

        <table class="table" id="datatablesSimple">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Couleur</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for couleur in couleurs %}
                <tr>
                    <td>{{ couleur.id }}</td>
                    <td>{{ couleur.codecouleur }}</td>
                    <td>
                        <a href="{{ path('app_couleur_show', {'id': couleur.id}) }}" class="btn btn-danger m-1">Supprimer</a>
                        <a href="{{ path('app_couleur_edit', {'id': couleur.id}) }}" class="btn btn-primary m-1">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_couleur_new') }}" class="btn btn-success m-1">Cr√©er une nouvelle couleur</a>
    </div>
{% endblock %}
