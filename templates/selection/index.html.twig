{% extends 'faadmin.html.twig' %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref</th>
                <th>Marque</th>
                <th>Photo</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.ref }}</td>
                <td>{{ produit.appeler }}</td>
                <td>{{ produit.photo }}</td>
                <td>{{ produit.prix }}</td>
                <td>
                    <a href="{{ path('app_selection_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_selection_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_selection_new') }}">Create new</a>
{% endblock %}
