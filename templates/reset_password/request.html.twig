{% extends 'facteuraccordeur.html.twig' %}
{% block stylesheets %}<link href="{{ asset('facteuraccordeur/css/stylerequest.css') }}" rel="stylesheet" />{% endblock %}

{% block body %}

    <div class="mainrequest">

        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1>Demandez un nouveau mot de passe</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrez votre email et vous recevrez un lien dans votre messagerie personnelle pour changer votre mot de passe
                </small>
            </div>

            <button class="btn btn-primary">Confirmer</button>
        {{ form_end(requestForm) }}

    </div>

{% endblock %}
