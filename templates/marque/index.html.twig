{% extends 'faadmin.html.twig' %}

{% block body %}
    <div class="card-body">
        <h1>Liste des Marques</h1>

        <table class="table"  id="datatablesSimple">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for marque in marques %}
                <tr>
                    <td>{{ marque.id }}</td>
                    <td>{{ marque.nom }}</td>
                    <td>
                        <a href="{{ path('app_marque_show', {'id': marque.id}) }}" class="btn btn-danger m-1">Supprimer</a>
                        <a href="{{ path('app_marque_edit', {'id': marque.id}) }}" class="btn btn-primary m-1">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_marque_new') }}" class="btn btn-success m-1 col-2">Cr√©er une nouvelle marque</a>
    </div>
{% endblock %}
