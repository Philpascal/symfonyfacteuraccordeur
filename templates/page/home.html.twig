{% extends 'facteuraccordeur.html.twig' %}

{% block body %}
    
    <section>
        <h2>Mes prestations</h2>
        <div class="prestations">
            <a href="{{ path('page_accord') }}"><p>Accord - Harmonisation</p></a>
            <a href="{{ path('page_reparation') }}"><p>Réparation - Restauration</p></a>
            <a href="{{ path('page_conseil') }}"><p>Conseil Achat-Location</p></a>
        </div>
        {% for photoaccueil in photoaccueils %}
            <img src="{{app_cdn}}{{photoaccueil.prestation}}" alt="#">
        {% endfor %}
        <div class="renseignements">
            <a href="{{ path('page_urgence') }}"><p>Urgence</p></a>
            <a href="{{ path('page_urgence') }}"><p>Tarifs / Devis</p></a>
            <a href="{{ path('page_zone') }}"><p>Zone d'intervention</p></a>
        </div>
        {% for photoaccueil in photoaccueils %}
            <iframe width="560" height="315" src="{{ photoaccueil.video }}" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        {% endfor %}

    </section>

    <main class="carrouselindex">
        <div class="okmail">
            {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">{{ message }}</div>
            {% endfor %}
        </div>

        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
            </div>
            <div class="carousel-inner">
                {# <div class="carousel-item active">
                    <img src="{{ asset('facteuraccordeur/images/accordeur1.jpg') }}" class="d-block w-100" alt="...">
                </div> #}
                {% for photoaccueil in photoaccueils %}
                    <div class="carousel-item active">
                        <img src="{{app_cdn}}{{photoaccueil.carrouselp}}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="{{app_cdn}}{{photoaccueil.carrouseld}}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="{{app_cdn}}{{photoaccueil.carrouselt}}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="{{app_cdn}}{{photoaccueil.carrouselq}}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="{{app_cdn}}{{photoaccueil.carrouselc}}" class="d-block w-100" alt="...">
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div class="antoine"><h2>Antoine BERTHIER</h2></div>
        {% for photoaccueil in photoaccueils %}
            <img class="page_accueil" src="{{app_cdn}}{{photoaccueil.note}}" alt="#">
        {% endfor %}
        <div class="ile"><p>Île de<br>France</p></div>

    </main>

    <aside>
        <div class="accessoire">
            <a href="{{ path('page_zone') }}">
                <figure>
                    {% for photoaccueil in photoaccueils %}
                        <img  class="imgdiap" src="{{app_cdn}}{{photoaccueil.diapason}}" alt="#">
                    {% endfor %}
                    <figcaption class="figdiap">Les diapasons</figcaption>
                </figure>
            </a>
            <a href="{{ path('page_zone') }}">
                <figure>
                    {% for photoaccueil in photoaccueils %}
                        <img class="imgboit" src="{{app_cdn}}{{photoaccueil.accessoir}}" alt="#">
                    {% endfor %}
                    <figcaption class="figboit">Les accessoires</figcaption>
                </figure>
            </a>
            <a href="{{ path('page_zone') }}">
                <figure>
                    {% for photoaccueil in photoaccueils %}
                        <img class="imgcle" src="{{app_cdn}}{{photoaccueil.clef}}" alt="#">
                    {% endfor %}
                    <figcaption class="figcle">Les clefs</figcaption>
                </figure>
            </a>   
        </div>
        <div class="piano">
            <a href="{{ path('page_pianodroit') }}">
                <figure class="pianos_droits">
                    <figcaption class="figpiad">Les pianos droits</figcaption>
                    {% for photoaccueil in photoaccueils %}
                        <img  class="imgpiad" src="{{app_cdn}}{{photoaccueil.pianod}}" alt="#">
                    {% endfor %}
                </figure>
            </a>
            <a href="{{ path('page_pianoaqueue') }}">
                <figure class="pianos_queues">
                    <figcaption class="figpiaq">Les pianos à queues</figcaption>
                    {% for photoaccueil in photoaccueils %}
                        <img class="imgpiaq" src="{{app_cdn}}{{photoaccueil.pianoaq}}" alt="#">
                    {% endfor %}
                </figure>
            </a>
        </div>
    </aside>

{% endblock %}
