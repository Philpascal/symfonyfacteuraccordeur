                </a>
            {# </li> #}
            {% else %}
                {# <li class="nav-item"> #}
                    <a class="nav-link" href="{{ path('app_logout') }}">
                    </a>
                {# </li> #}
                {# <li class="nav-item"> #}
                    <a class="nav-link" href="{{ path('app_formulaire') }}">
                        <button type="submit" class="btn btn-lg btn-primary">Formulaire de contact</button> 
                    </a>
                {# </li> #}
            {% endif %}

        </div>

{% endblock %}
