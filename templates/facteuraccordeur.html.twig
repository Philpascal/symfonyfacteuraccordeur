<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}{{titrepage}}{% endblock %}</title>
    <link rel="icon" href="{{ asset('facteuraccordeur/images/logo.png') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="{{ asset('facteuraccordeur/css/style.css') }}" rel="stylesheet" />
    {% block stylesheets %}{% endblock %}
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Boogaloo&display=swap" rel="stylesheet"> 

</head>

<body>

    <header class="top_bar">

        <img class="image_menu" src="{{ asset('facteuraccordeur/images/menu.png') }}" alt="#" onclick="openModal()">

        <div id="modal">
            <h2>Mes prestations</h2>
            <ul>
                <li>
                    <a href="{{ path('home') }}"  onclick="closeModal()">
                        <img class="image_menu" src="{{ asset('facteuraccordeur/images/home.png') }}" alt="#">
                        <p>Accueil</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('page_accord') }}" onclick="closeModal()">
                        <img class="image_menu" src="{{ asset('facteuraccordeur/images/note5.png') }}" alt="#">
                        <p>Accord - Harmonisation</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('page_reparation') }}" onclick="closeModal()">
                        <img class="image_menu" src="{{ asset('facteuraccordeur/images/note4.png') }}" alt="#">
                        <p>Reparation - Restauration</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('page_conseil') }}" onclick="closeModal()">
                        <img class="image_menu" src="{{ asset('facteuraccordeur/images/note2.jpg') }}" alt="#">
                        <p>Conseil Achat-Location</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('page_urgence') }}" onclick="closeModal()">
                        <img class="image_menu" src="{{ asset('facteuraccordeur/images/note6.png') }}" alt="#">
                        <p>Urgence</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('page_urgence') }}" onclick="closeModal()">
                        <img class="image_menu" src="{{ asset('facteuraccordeur/images/note1.jpg') }}" alt="#">
                        <p>Tarifs / Devis</p>
                    </a>
                </li>
                <li>
                    <a href="{{ path('page_zone') }}" onclick="closeModal()">
                        <img class="image_menu" src="{{ asset('facteuraccordeur/images/note3.png') }}" alt="#">
                        <p>Zone d'intervention</p>
                    </a>
                </li>
            </ul>
            <button id="close" onclick="closeModal()">X</button>
        </div>

        {% if is_granted("ROLE_USER") %}
        {# {% if not is_granted("ROLE_USER") %} #}
            {# <a class="nav-link" href="{{ path('app_register') }}"></a>
            <a class="nav-link" href="{{ path('app_login') }}"></a>
        {% else %} #}
            <a class="sedeconnecter nav-link" href="{{ path('app_logout') }}">✅Pour vous déconnecter</a>
        {% endif %}

        <div class="titretopbar">
            <h1>Facteur<br>Accordeur</h1>
            <a href="{{ path('admin_home') }}"><img class="logo" src="{{ asset('facteuraccordeur/images/logo.png') }}" alt="#"></a>
        </div>

    </header>

    <div class="cont_site">

    {% block body %}{% endblock %}

    </div>

    <footer class="footer">
        
        <a href="{{ path('page_contact') }}"><img class="arobase" src="{{ asset('facteuraccordeur/images/arobase.png') }}" alt="#"></a>
        <a href="{{ path('page_zone') }}"><img class="localisation" src="{{ asset('facteuraccordeur/images/localisation.jpg') }}" alt="#"></a>
        <a href="{{ path('page_contact') }}"><img class="telephone" src="{{ asset('facteuraccordeur/images/telephone.png') }}" alt="#"></a>
        <a href="{{ path('page_zone') }}"><img class="facebook" src="{{ asset('facteuraccordeur/images/facebook.jpg') }}" alt="#"></a>
        <a href="{{ path('page_zone') }}"><img class="mention_legale" src="{{ asset('facteuraccordeur/images/mention_legale.jpg') }}" alt="#"></a>
        
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="{{ asset('facteuraccordeur/main.js') }}"></script>

</body>
</html>
